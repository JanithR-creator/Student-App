<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="context" prefHeight="335.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainFormController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Student Form">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Separator layoutX="14.0" layoutY="35.0" prefHeight="8.0" prefWidth="571.0" />
      <TextField fx:id="txtId" layoutX="38.0" layoutY="63.0" prefHeight="25.0" prefWidth="92.0" promptText="id" />
      <TextField fx:id="txtName" layoutX="143.0" layoutY="63.0" prefHeight="25.0" prefWidth="156.0" promptText="name" />
      <TextField fx:id="txtAddress" layoutX="312.0" layoutY="63.0" prefHeight="25.0" prefWidth="156.0" promptText="address" />
      <Button fx:id="btnSubmit" layoutX="480.0" layoutY="63.0" mnemonicParsing="false" onAction="#submitOnAction" text="Save Student" />
      <TableView fx:id="table" layoutX="35.0" layoutY="102.0" prefHeight="200.0" prefWidth="528.0">
        <columns>
          <TableColumn fx:id="colId" prefWidth="59.0" text="#Id" />
          <TableColumn fx:id="colName" prefWidth="126.0" text="Name" />
            <TableColumn fx:id="colAddress" minWidth="3.0" prefWidth="182.0" text="Address" />
            <TableColumn fx:id="colDelete" minWidth="0.0" prefWidth="83.0" text="Delete" />
            <TableColumn fx:id="colUpdate" minWidth="0.0" prefWidth="83.0" text="Delete" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
